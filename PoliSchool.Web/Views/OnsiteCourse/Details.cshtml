@model PoliSchool.Web.Models.OnsiteCourseListModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles Del Curso: @Model.CourseId </h1>

<div>
    <h4>OnsiteCourseListModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Codigo Del Curso
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseId)
        </dd>
        <dt class = "col-sm-2">
            Aula Del Curso
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            Calendario de curso
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Days)
        </dd>
        <dt class = "col-sm-2">
            Horario Del Curso
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CourseId}) |
    <a asp-action="Index">Back to List</a>
</div>
